<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LegalConsentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:paddingRight="30dp">

        <in.techware.lataxidriver.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_legal_consent"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"/>

        <in.techware.lataxidriver.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_agreement_proceed"
            android:gravity="center"
            android:textColor="@color/text_4"
            android:textSize="17sp"
            android:layout_marginTop="20sp"
            android:layout_gravity="center"/>

        <View
            android:layout_width="45dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/bg_app_rectangle_with_semicircle_edge"/>

        <in.techware.lataxidriver.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_3"
            android:lineSpacingExtra="5dp"
            android:textSize="14sp"
            android:text="@string/label_consent_agreement"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_legal_consent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:paddingLeft="10dp"
            app:buttonTint="@color/text_5"
            android:textColor="@color/text_5"
            android:text="@string/label_i_accept"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_continue_agreement"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_click_black_rectangle_with_semicircle_edge"
            android:onClick="onLegalConsentSubmitClick"
            android:text="@string/btn_continue"
            android:textColor="@color/white"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>